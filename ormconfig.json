{
  "type": "mongodb",
  "host": "localhost",
  "port": 27017,
  "username": "longwave",
  "database": "longwave",
  "synchronize": true,
  "autoReconnect": true,
  "reconnectTries": 30,
  "reconnectionInterval": 3000,
  "logging": true,
  "entities": [
    "src/entity/**/*.ts"
  ],
  "migrations": [
    "src/migration/**/*.ts"
  ],
  "subscribers": [
    "src/subscriber/**/*.ts"
  ],
  "cli": {
    "entitiesDir": "src/entity",
    "migrationsDir": "src/migration",
    "subscribersDir": "src/subscriber"
  }
}